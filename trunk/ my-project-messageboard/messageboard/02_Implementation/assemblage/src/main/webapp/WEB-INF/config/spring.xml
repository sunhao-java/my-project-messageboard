<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd" >
<beans>
	
	<!-- 引入spring基本配置 -->
	<import resource="spring-init.xml"/>
	<!-- 引入页面的配置 -->
	<import resource="base/servlet.xml"/>
	
	<!-- 引入job的配置 -->
	<import resource="base/jobs.xml"/>
	<!-- 引入项目邮件服务器配置 -->
	<import resource="base/mail.xml"/>

    <!-- 引入数据源配置 -->
    <import resource="database/dataSource.xml"/>
	<!-- 引入oracle数据库的配置 -->
	<import resource="database/db-oracle.xml"/>
	
	<!-- 引入项目中所有dao的配置 -->
	<import resource="spring/dao.xml"/>
	<!-- 引入项目中所有service的配置 -->
	<import resource="spring/service.xml"/>
	<!-- 引入项目中所有controller的配置 -->
	<import resource="spring/controller.xml"/>
	
	<!-- 引入异常统一处理类的配置 -->
	<import resource="base/exception.xml"/>
	
	<!-- spring的interceptor引入 -->
	<import resource="base/interceptor.xml"/>

    <!-- 缓存的配置 -->
    <import resource="base/cache.xml"/>
	
</beans>