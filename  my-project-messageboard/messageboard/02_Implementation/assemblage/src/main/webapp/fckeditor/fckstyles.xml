<Styles>
    <Style name="红色标题" element="h3">
        <Style name="color" value="Red"/>
    </Style>
    <Style name="背景: 黄色" element="span">
		<Style name="background-color" value="Yellow" />
	</Style>
	<Style name="背景: 绿色" element="span">
		<Style name="background-color" value="Lime" />
	</Style>

	<Style name="大字体" element="big" />
	<Style name="小字体" element="small" />
	<Style name="打印字体" element="tt" />

	<Style name="代码" element="code" />
	<Style name="普通文本" element="samp" />

	<Style name="删除文本" element="del" />
	<Style name="插入文本" element="ins" />

	<Style name="引用" element="q" />

	<!-- Object Styles -->
	<Style name="Image on Left" element="img">
		<Attribute name="style" value="padding: 5px; margin-right: 5px" />
		<Attribute name="border" value="2" />
		<Attribute name="align" value="left" />
	</Style>
	<Style name="Image on Right" element="img">
		<Attribute name="style" value="padding: 5px; margin-left: 5px" />
		<Attribute name="border" value="2" />
		<Attribute name="align" value="right" />
	</Style>
</Styles>
