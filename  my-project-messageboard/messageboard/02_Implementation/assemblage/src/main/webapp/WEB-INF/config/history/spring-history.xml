<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd" >
<beans>
    <bean id="historyDAO" class="com.message.main.history.dao.impl.HistoryDAOImpl" parent="genericHibernateDAOImpl"/>
    
    <bean id="historyService" class="com.message.main.history.service.impl.HistoryServiceImpl">
    	<property name="historyDAO" ref="historyDAO"/>
    </bean>
    
    <bean id="historyController" class="com.message.main.history.web.HistoryController">
    	<property name="methodNameResolver">
    		<bean class="org.springframework.web.servlet.mvc.multiaction.PropertiesMethodNameResolver">
    			<property name="mappings">
    				<props>
    					<prop key="/history/listLoginHistory.do">listLoginHistory</prop>
    				</props>
    			</property>
    		</bean>
    	</property>
    	<property name="historyService" ref="historyService"/>
    </bean>
</beans>